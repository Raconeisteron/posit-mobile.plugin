<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/relativeLayout1" 
	android:layout_width="wrap_content" android:layout_height="wrap_content">
	<TextView android:text="@string/idLabel" android:id="@+id/guidTextView"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	<EditText android:layout_width="match_parent" android:text=""
		android:layout_height="wrap_content" android:id="@+id/guidEditText"
		android:layout_toRightOf="@+id/guidTextView"></EditText>
	<TextView android:text="@string/latitude" android:id="@+id/latitudeTextView"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/guidEditText"></TextView>
	<TextView android:text="@string/getting_latitude" android:id="@+id/latitudeValueTextView"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/guidEditText" android:layout_toRightOf="@+id/latitudeTextView"></TextView>
	<TextView android:text="@string/longitude" android:id="@+id/longitudeTextView"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/latitudeTextView"></TextView>
	<TextView android:text="@string/getting_longitude" android:id="@+id/longitudeValueTextView"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/longitudeTextView"
		android:layout_below="@+id/latitudeValueTextView"></TextView>
	<DatePicker android:layout_height="wrap_content" android:id="@+id/datePicker"
		android:layout_width="wrap_content" android:layout_below="@+id/longitudeTextView"></DatePicker>
	<TextView android:text="@string/nameLabel" android:id="@+id/nameTextView"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_below="@+id/datePicker" android:layout_toLeftOf="@+id/latitudeValueTextView"></TextView>
	<EditText android:text=""
		android:layout_height="wrap_content" android:id="@+id/nameEditText"
		android:layout_below="@+id/datePicker" android:layout_toRightOf="@+id/nameTextView" android:layout_width="match_parent"></EditText>
	<TextView android:text="@string/descriptionLabel" android:id="@+id/descriptionTextView"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_toLeftOf="@+id/latitudeValueTextView" android:layout_below="@+id/nameEditText"></TextView>
	<EditText android:text=""
		android:layout_height="wrap_content" android:id="@+id/descriptionEditText"
		android:layout_toRightOf="@+id/descriptionTextView" android:layout_below="@+id/nameEditText" android:layout_width="match_parent"></EditText>
	<Button android:layout_width="wrap_content" android:text="@string/save"
		android:layout_height="wrap_content" android:id="@+id/saveButton"
		android:layout_below="@+id/descriptionTextView"></Button>
</RelativeLayout>
