<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_row_rl"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/find_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:src="@drawable/person_icon" />

    <TextView
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="70dp"
        android:layout_toRightOf="@id/find_image"
        android:singleLine="true"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/name"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/description_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@id/find_image"
        android:singleLine="true"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/stop_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/description_id"
        android:layout_below="@id/status"
        android:textSize="10sp" />

    <!-- android:layout_toRightOf="@id/find_image"/> -->

    <TextView
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_id"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1dp"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_id"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/latitude"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_id"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/longitude"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/latitude"
        android:layout_marginRight="2dp"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/idNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/latitude"
        android:layout_below="@+id/description_id"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:textSize="8sp" />

</RelativeLayout>