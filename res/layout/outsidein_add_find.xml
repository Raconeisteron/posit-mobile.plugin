<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical">
	<TableLayout android:id="@+id/tableLayout1"
		android:layout_height="wrap_content" android:layout_width="match_parent"
		android:stretchColumns="1,2,3,4">
		<TextView android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:textSize="12dp"
			android:textColor="#FF0000"
			android:id="@+id/editText1"
			android:text="@string/unique_id_help"></TextView>	
		<TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:text="@string/unique_id"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:id="@+id/guidTextView_spec"></TextView>
 			<EditText android:id="@+id/idEditText_fname" 
 				android:hint="XX"
 				android:capitalize="characters"
 				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
 				android:nextFocusDown="@+id/idEditText_mname"
				android:ems="2" 
				android:maxLength="2" ></EditText>
			<EditText android:id="@+id/idEditText_mname" 
			 	android:hint="YY"
				android:capitalize="characters"
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
				android:nextFocusDown="@+id/idEditText_mbirth" 
				android:ems="2" 
				android:maxLength="2"></EditText>
			<EditText android:id="@+id/idEditText_mbirth" 
				android:hint="01" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
				android:nextFocusDown="@+id/idEditText_ybirth"
				android:ems="2" 
				android:numeric="integer" 
				android:maxLength="2"></EditText>
			<EditText android:id="@+id/idEditText_ybirth" 
				android:hint="11" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
				android:nextFocusDown="@+id/syringesInEditText"
				android:ems="2" 
				android:numeric="integer" 
				android:maxLength="2"></EditText>
		</TableRow>
		<TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:text="@string/syringes_in"
				android:id="@+id/syringesInTextView"></TextView>
			<EditText android:numeric="integer" android:layout_height="wrap_content"
				android:nextFocusDown="@+id/syringesOutEditText"
				android:layout_width="fill_parent" android:id="@+id/syringesInEditText"
				android:ems="2"  android:maxLength="2"></EditText>
			<TextView android:layout_height="wrap_content"
				android:layout_width="fill_parent" 
				android:layout_marginLeft="10dp"
				android:text="@string/syringes_out"
				android:id="@+id/syringesOutTextView"></TextView>
			<EditText android:numeric="integer" android:layout_height="wrap_content"
				android:nextFocusDown="@+id/isNewCheckBox"
				android:layout_width="fill_parent" 
				android:id="@+id/syringesOutEditText"
				android:ems="2"   android:maxLength="2"></EditText>
		</TableRow>
	</TableLayout>

	<TableRow android:id="@+id/tableRow4" android:layout_height="wrap_content"
		android:layout_width="match_parent">
		<CheckBox android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:text="@string/is_new"
			android:id="@+id/isNewCheckBox"></CheckBox>
	</TableRow>
	<TableRow android:id="@+id/tableRow5" android:layout_height="wrap_content"
		android:layout_width="match_parent">
		<Button android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:text="@string/save"
			android:id="@+id/saveButton"></Button>
	</TableRow>
</LinearLayout>
