<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@android:id/empty" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:fillViewport="true">

	<LinearLayout 
		android:orientation="vertical" 
		android:gravity="center"
		android:scrollbars="vertical" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<!-- <TextView android:text="@string/admin_login" android:textColor="#ffffff" 
			android:layout_width="wrap_content" android:layout_gravity="center" android:textSize="20dp" 
			android:layout_height="wrap_content" /> -->

		<ImageView android:id="@+id/logo" 
		    android:contentDescription="Logo"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:src="@drawable/posit" />

		<!-- <TextView android:text="@string/login_prompt" android:textColor="#ffffff" 
			android:layout_width="wrap_content" android:layout_gravity="center" android:textSize="20dp" 
			android:layout_height="wrap_content" /> -->

		<EditText android:id="@+id/usernameEdit"
			android:layout_marginTop="15dp" 
			android:hint="@string/username"
			android:layout_gravity="center" 
			android:nextFocusDown="@+id/passwordEdit"
			android:minWidth="150dp" 
			android:singleLine="true"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" />

		<EditText android:id="@+id/passwordEdit" 
		    android:inputType="textPassword"
			android:hint="@string/password" 
			android:nextFocusDown="@+id/login_button"
			android:layout_gravity="center" 
			android:minWidth="150dp"
			android:singleLine="true" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<LinearLayout 
			android:layout_marginTop="10dp" 
			android:orientation="horizontal"
			android:gravity="center" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<Button 
			    android:text="@string/login" 
			    android:id="@+id/login_button"
				android:hapticFeedbackEnabled="true" 
				android:minWidth="75dp"
				android:layout_gravity="bottom" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<Button 
			    android:text="@string/login_cancel" 
			    android:id="@+id/cancel_login_button"
				android:hapticFeedbackEnabled="true" 
				android:minWidth="75dp"
				android:layout_gravity="bottom" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</LinearLayout>

	</LinearLayout>
</ScrollView>